Options -Indexes
ServerSignature Off

<FilesMatch ".(gif|jpg|jpeg|png|svg|ico|js|css|json)$">
    Header set Cache-Control "max-age=25920000"
</FilesMatch>

# explicitly disable caching for scripts and other dynamic files
<FilesMatch "\.(php)$">
    Header unset Cache-Control
</FilesMatch>

RewriteEngine On

# Disclosure Authorisation headers to PHP
RewriteRule .? - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

# Rewrite the whole /dist folder to root folder
RewriteRule ^dist/(.*)$ /$1 [R=301,NC,L]

# to redirect any request to index.html,
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# not rewrite css, js and images
RewriteCond %{REQUEST_URI} !\.(?:css|js|map|jpe?g|gif|png|php)$ [NC]
RewriteRule ^(.*)$ /index.html?path=$1 [NC,L,QSA]
RewriteRule ^(.*)$ /index.php?path=$1 [NC,L,QSA]